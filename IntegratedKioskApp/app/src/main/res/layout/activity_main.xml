<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/display_layout"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">
<!--        <TextView-->
<!--            android:id="@+id/marqueeText"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"-->
<!--            android:layout_marginTop="0sp"-->
<!--            android:ellipsize="marquee"-->
<!--            android:marqueeRepeatLimit="marquee_forever"-->
<!--            android:padding="0dp"-->
<!--            android:scrollHorizontally="true"-->
<!--            android:singleLine="true"-->
<!--            android:focusable="true"-->
<!--            android:focusableInTouchMode="true"-->
<!--            android:text="______________________________________________________________________'It's nerf or nothing'-Abraham Lincoln___________________________________Scrolling Text _______________________'We're deleting this quote bar, it's so stupid'- Jaiden Lee"-->
<!--            android:textSize="20sp"-->
<!--            android:textColor = "#FF0000"-->
<!--            android:textStyle="bold"-->
<!--            android:visibility = "invisible"-->
<!--            />-->
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"
            android:background="#BAD3E4"></View>
        <!--turn preview off until student touches camera-->
        <TextView
            android:id="@+id/display_student_id"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#04345C"
            android:contextClickable="true"
            android:fontFamily="sans-serif-smallcaps"
            android:text="CLICK FOR CAMERA OR ENTER ID"
            android:textAlignment="center"
            android:textColor="#BAD3E4"
            android:textSize="66sp"></TextView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/camera_layout"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginEnd="640dp"
        android:orientation="vertical"
        android:background="#BAD3E4"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display_layout">


        <RelativeLayout
            android:layout_width="600dp"
            android:layout_height="600dp"
            android:orientation="horizontal"
            android:background="#04345C">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="550dp"
                android:layout_height="550dp"
                android:layout_centerVertical = "true"
                android:layout_centerHorizontal = "true"
                >
            </androidx.camera.view.PreviewView>

            <Button
                android:id="@+id/disableCameraButton"
                android:layout_width="350dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="100dp"
                android:text="Disable camera"
                android:textSize="30sp"
                android:visibility="invisible"
                android:backgroundTint="#1E77BD"></Button>

            <Button
                android:id="@+id/cover"
                android:layout_width="560dp"
                android:layout_height="570dp"
                android:layout_centerInParent="true"
                android:backgroundTint="#1E77BD"
                android:visibility="visible"></Button>
        </RelativeLayout>



    </LinearLayout>


    <LinearLayout
        android:id="@+id/numpad_layout"
        android:layout_width="match_parent"
        android:layout_height="700dp"
        android:layout_marginStart="640dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#BAD3E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/display_layout">



        <LinearLayout
            android:id="@+id/keypad"
            android:layout_width="600dp"
            android:layout_height="600dp"
            android:gravity="center"
            android:background="#04345C"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstrow"
                android:layout_width="match_parent"
                android:layout_height="137.5dp"
                android:layout_marginBottom=".10dp"
                android:layout_marginHorizontal="1dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E77BD"
                    android:text="1"
                    android:textSize="60sp"
                    ></Button>

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"></View>

                <Button
                    android:id="@+id/two"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:backgroundTint="#1E77BD"
                    android:textSize="60sp"></Button>

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"></View>

                <Button
                    android:id="@+id/three"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:backgroundTint="#1E77BD"
                    android:textSize="60sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondrow"
                android:layout_width="match_parent"
                android:layout_height="137.5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/four"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E77BD"
                    android:text="4"
                    android:textSize="60sp"></Button>

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"></View>

                <Button
                    android:id="@+id/five"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E77BD"
                    android:text="5"
                    android:textSize="60sp"></Button>

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"></View>

                <Button
                    android:id="@+id/six"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E77BD"
                    android:text="6"
                    android:textSize="60sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdrow"
                android:layout_width="match_parent"
                android:layout_height="137.5dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E77BD"
                    android:text="7"
                    android:textSize="60sp"></Button>

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"></View>

                <Button
                    android:id="@+id/eight"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E77BD"
                    android:text="8"
                    android:textSize="60sp"></Button>

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"></View>

                <Button
                    android:id="@+id/nine"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E77BD"
                    android:text="9"
                    android:textSize="60sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourthrow"
                android:layout_width="match_parent"
                android:layout_height="137.5dp"
                android:gravity="center">

                <Button
                    android:id="@+id/delete"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E77BD"
                    android:text="DEL"
                    android:textSize="40sp"></Button>

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"></View>

                <Button
                    android:id="@+id/zero"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E77BD"
                    android:text="0"
                    android:textSize="60sp"></Button>

                <View
                    android:layout_width="12dp"
                    android:layout_height="match_parent"></View>

                <Button
                    android:id="@+id/enter"
                    android:layout_width="137.5dp"
                    android:layout_height="match_parent"
                    android:backgroundTint="#1E77BD"
                    android:text="OK"
                    android:textSize="50sp"></Button>

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>

