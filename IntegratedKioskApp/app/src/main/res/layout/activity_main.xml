<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/camera_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="640dp"
        android:orientation="vertical"
        android:background="#BAD3E4"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"></View>

        <TextView
            android:id="@+id/promptView"
            android:layout_width="600dp"
            android:layout_height="100dp"
            android:autoSizeTextType="none"
            android:background="#1E77BD"
            android:fontFamily="sans-serif-smallcaps"
            android:text="please center your \n face in the camera"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="40sp"
            android:textStyle="normal"></TextView>

        <LinearLayout
            android:layout_width="600dp"
            android:layout_height="600dp"
            android:orientation="horizontal"
            android:gravity = "center"
            android:background="#04345C">

            <androidx.camera.view.PreviewView
                android:id="@+id/previewView"
                android:layout_width="550dp"
                android:layout_height="550dp">
            </androidx.camera.view.PreviewView>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"></View>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/numpad_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="640dp"
        android:orientation="vertical"
        android:gravity="center"
        android:background="#BAD3E4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/display_student_id"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="#1E77BD"
            android:contextClickable="true"
            android:fontFamily="monospace"
            android:text="123456"
            android:textAlignment="center"
            android:textColor="#FFFFFF"
            android:textSize="70sp" />

        <LinearLayout
            android:id="@+id/keypad"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/firstrow"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginBottom=".10dp"
                android:layout_marginHorizontal="1dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="1"
                    android:textSize="50sp"></Button>

                <Button
                    android:id="@+id/two"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="2"
                    android:textSize="50sp"></Button>

                <Button
                    android:id="@+id/three"
                    android:layout_width="100dp"
                    android:layout_height="match_parent"
                    android:text="3"
                    android:textSize="50sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/secondrow"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/four"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="4"
                    android:textSize="50sp"></Button>

                <Button
                    android:id="@+id/five"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="5"
                    android:textSize="50sp"></Button>

                <Button
                    android:id="@+id/six"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="6"
                    android:textSize="50sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/thirdrow"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/seven"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="7"
                    android:textSize="50sp"></Button>

                <Button
                    android:id="@+id/eight"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="8"
                    android:textSize="50sp"></Button>

                <Button
                    android:id="@+id/nine"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="9"
                    android:textSize="50sp"></Button>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/fourthrow"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:gravity="center">

                <Button
                    android:id="@+id/delete"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="DEL"
                    android:textSize="30sp"></Button>

                <Button
                    android:id="@+id/zero"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="0"
                    android:textSize="50sp"></Button>

                <Button
                    android:id="@+id/enter"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:text="OK"
                    android:textSize="30sp"></Button>


            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>